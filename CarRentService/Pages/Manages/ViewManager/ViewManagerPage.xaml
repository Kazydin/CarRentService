<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Manages.ViewManager.ViewManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    xmlns:viewManager="using:CarRentService.Pages.Manages.ViewManager"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewManager:ViewManagerViewModel}">

    <Grid Margin="47, 20, 47, 20">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <CommandBar
            DefaultLabelPosition="Right"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <AppBarButton
                Icon="Delete"
                Command="{Binding DeleteManagerCommand}"
                Label="Удалить менеджера" />
        </CommandBar>
        <StackPanel
            Margin="0, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="0">
            <TextBlock
                Margin="0, 0, 0, 10">
                ID менеджера
            </TextBlock>
            <TextBox
                Text="{Binding Manager.Id, Mode=TwoWay}"
                IsEnabled="False" />
        </StackPanel>
        <editors:SfComboBox
            ItemsSource="{Binding Roles, Converter={StaticResource EnumCollectionToDescriptionsConverter}, Mode=OneWay}"
            Header="Роль"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Grid.Column="1"
            Margin="5, 10, 5, 0"
            SelectedItem="{Binding Manager.Role, Converter={StaticResource EnumToDescriptionConverter}, Mode=TwoWay}"
            Width="Auto" />
        <StackPanel Grid.Row="1" Grid.Column="2">
            <editors:SfComboBox
                ItemsSource="{Binding Branches, Mode=OneWay}"
                Header="Филиалы"
                Margin="5, 10, 0, 10"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="Name"
                TextMemberPath="Name"
                SelectionMode="Multiple"
                IsEnabled="{Binding IsBranchesEnabled}"
                MultiSelectionDisplayMode="Token"
                SelectionChangeTrigger="Always"
                SelectionChanged="ManagerBranches_OnSelectionChanged"
                x:Name="ManagerBranches"
                DelimiterText=","
                Width="Auto" />
            <TextBlock Margin="5, 0, 0, 5" Text="(только для региональных менеджеров)" Foreground="Gray" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="2"
            Grid.Column="0">
            <TextBlock
                Margin="0, 0, 0, 10">
                Фамилия Имя Отчество
            </TextBlock>
            <TextBox
                Text="{Binding Manager.Fio, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="2"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Возраст
            </TextBlock>
            <TextBox
                Text="{Binding Manager.Age, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="2"
            Grid.Column="2">
            <TextBlock
                Margin="0, 0, 0, 10">
                Телефон
            </TextBlock>
            <TextBox
                Text="{Binding Manager.Phone, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="3"
            Grid.Column="0">
            <TextBlock
                Margin="0, 0, 0, 10">
                Логин
            </TextBlock>
            <TextBox
                Text="{Binding Manager.Login, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="3"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Пароль
            </TextBlock>
            <PasswordBox
                x:Name="PasswordBox"
                PasswordRevealMode="Peek"
                PlaceholderText="Введите пароль"
                PasswordChanged="PasswordBox_PasswordChanged" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0, 15, 0, 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0, 0, 10, 0"
                Command="{Binding SaveCommand}">
                Сохранить
            </Button>
            <Button
                Command="{Binding CancelEditCommand}">
                Отмена
            </Button>
        </StackPanel>
    </Grid>
</abstract:NavigationPage>