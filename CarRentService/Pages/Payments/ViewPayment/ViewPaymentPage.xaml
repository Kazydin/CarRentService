<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Payments.ViewPayment.ViewPaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarRentService.Pages.Payments.ViewPayment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:ViewPaymentViewModel }">

    <Grid Margin="47, 20, 47, 20">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <CommandBar
            DefaultLabelPosition="Right"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <AppBarButton
                Icon="Delete"
                Command="{Binding EditRentalCommand}"
                Label="Изменить аренду"/>
            <AppBarButton
                Icon="Delete"
                Command="{Binding DeletePaymentCommand}"
                Label="Удалить клиента" />
        </CommandBar>
        <StackPanel
            Margin="0, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="0">
            <TextBlock
                Margin="0, 0, 0, 10">
                ID платежа
            </TextBlock>
            <TextBox
                Text="{Binding Payment.Id, Mode=TwoWay}"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Margin="0, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Аренда
            </TextBlock>
            <TextBox
                Text="{Binding Payment.Rental.Name, Mode=OneWay}"
                IsEnabled="False" />
        </StackPanel>
        <editors:SfComboBox
            ItemsSource="{Binding Methods, Mode=OneWay}"
            Header="Метод"
            Margin="0, 11, 5, 10"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Width="Auto"
            Grid.Column="0"
            SelectedItem="{Binding Payment.Method, Mode=TwoWay}" />
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="2"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Сумма
            </TextBlock>
            <TextBox
                Text="{Binding Payment.Amount, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0, 15, 0, 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0, 0, 10, 0"
                Command="{Binding SaveCommand}">
                Сохранить
            </Button>
            <Button
                Command="{Binding CancelEditCommand}">
                Отмена
            </Button>
        </StackPanel>
    </Grid>
</abstract:NavigationPage>