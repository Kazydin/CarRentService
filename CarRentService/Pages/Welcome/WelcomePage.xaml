<?xml version="1.0" encoding="utf-8"?>
<abstract:NavigationPage
    x:Class="CarRentService.Pages.Welcome.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:welcome="using:CarRentService.Pages.Welcome"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=welcome:WelcomeViewModel}">

    <StackPanel Margin="47, 20, 47, 20">
        <TextBlock FontSize="70">Добро пожаловать,</TextBlock>
        <TextBlock
            FontSize="35" Text="{Binding UserName}"/>
    </StackPanel>
</abstract:NavigationPage>
