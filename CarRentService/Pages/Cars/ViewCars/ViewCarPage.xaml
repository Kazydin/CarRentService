<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Cars.ViewCars.ViewCarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarRentService.Pages.Cars.ViewCars"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:ViewCarViewModel }">

    <Pivot
        Margin="47, 20, 47, 20">
        <PivotItem
            Header="Основная информация">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <CommandBar
                    DefaultLabelPosition="Right"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4">
                    <AppBarButton
                        Icon="Delete"
                        Command="{Binding SendToRepairCommand}"
                        Label="Сдать в ремонт" />
                    <AppBarButton
                        Icon="Delete"
                        Command="{Binding ReturnFromRepairCommand}"
                        Label="Вернуть из ремонта" />
                    <AppBarButton
                        Icon="Delete"
                        Command="{Binding DeleteCarCommand}"
                        Label="Удалить автомобиль" />
                </CommandBar>
                <StackPanel
                    Margin="0, 10, 5, 10"
                    Grid.Row="1"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        ID автомобиля
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.Id, Mode=TwoWay}"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="1"
                    Grid.Column="1">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Статус
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.Status, Mode=TwoWay}"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel
                    Margin="0, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Регистрационный номер
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.RegistrationNumber, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 5"
                    Grid.Row="2"
                    Grid.Column="1">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Марка
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.Make, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="2">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Модель
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.Model, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="3">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Год
                    </TextBlock>
                    <TextBox
                        Text="{Binding Car.Year, Mode=TwoWay}" />
                </StackPanel>
                <editors:SfComboBox
                    ItemsSource="{Binding Branches, Mode=OneWay}"
                    Header="Филиал"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0, 10, 0, 0"
                    TextMemberPath="Name"
                    DisplayMemberPath="Name"
                    SelectionChangeTrigger="Always"
                    SelectedItem="{Binding Car.Branch, Mode=TwoWay}"
                    Width="200" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0, 15, 0, 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="0, 0, 10, 0"
                        Command="{Binding SaveCommand}">
                        Сохранить
                    </Button>
                    <Button
                        Command="{Binding CancelEditCommand}">
                        Отмена
                    </Button>
                </StackPanel>
            </Grid>
        </PivotItem>
        <PivotItem
            Header="Аренды">
            <StackPanel>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Icon="Add"
                        Command="{Binding AddRentalCommand}"
                        Label="Добавить" />
                    <AppBarButton
                        Icon="Clear"
                        Command="{Binding ClearFiltersAndSortCommand}"
                        CommandParameter="Rentals"
                        Label="Сбросить группировку, фильтры и сортировку" />
                </CommandBar>

                <dataGrid:SfDataGrid
                    x:Name="RentalsDataGrid"
                    AutoGenerateColumns="False"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    LiveDataUpdateMode="AllowDataShaping"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    MinHeight="400"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Car.Rentals}">

                    <dataGrid:SfDataGrid.Columns>
                        <dataGrid:GridNumericColumn
                            HeaderText="ID аренды"
                            MappingName="Id" />
                        <dataGrid:GridTextColumn
                            HeaderText="Статус"
                            DisplayBinding="{Binding Path=Status, Converter={StaticResource EnumToDescriptionConverter}}" />
                        <dataGrid:GridNumericColumn
                            HeaderText="Цена"
                            MappingName="TotalCost" />
                    </dataGrid:SfDataGrid.Columns>
                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditRentalCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteRentalCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>
                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
    </Pivot>
</abstract:NavigationPage>