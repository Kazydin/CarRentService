<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Insurances.ViewInsurance.ViewInsurancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    xmlns:converters="using:CarRentService.Common.Converters"
    mc:Ignorable="d">

    <Grid Margin="47, 20, 47, 20">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <CommandBar
            DefaultLabelPosition="Right"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <AppBarButton
                Icon="Delete"
                Command="{Binding EditRentalCommand}"
                Label="Изменить аренду" />
            <AppBarButton
                Icon="Delete"
                Command="{Binding DeleteInsuranceCommand}"
                Label="Удалить страховку" />
        </CommandBar>
        <StackPanel
            Margin="0, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="0">
            <TextBlock
                Margin="0, 0, 0, 10">
                ID страховки
            </TextBlock>
            <TextBox
                Text="{Binding Insurance.Id, Mode=TwoWay}"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="2">
            <TextBlock
                Margin="0, 0, 0, 10">
                ID аренды
            </TextBlock>
            <TextBox
                Text="{Binding Insurance.Rental.Id, Mode=OneWay}"
                IsEnabled="False" />
        </StackPanel>
        <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="1"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Клиент
            </TextBlock>
            <TextBox
                Text="{Binding Insurance.Rental.Client.Fio, Mode=OneWay}"
                IsEnabled="False" />
        </StackPanel>
        <editors:SfComboBox
            ItemsSource="{Binding Types, Converter={StaticResource EnumCollectionToDescriptionsConverter}, Mode=OneWay}"
            Header="Тип"
            Margin="0, 11, 5, 10"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Width="Auto"
            Grid.Column="0"
            SelectedItem="{Binding Insurance.Type, Converter={StaticResource EnumToDescriptionConverter}, Mode=TwoWay}"/>
            <StackPanel
            Margin="5, 10, 5, 10"
            Grid.Row="2"
            Grid.Column="1">
            <TextBlock
                Margin="0, 0, 0, 10">
                Сумма покрытия страховки
            </TextBlock>
            <TextBox
                Text="{Binding Insurance.Cost, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0, 15, 0, 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Margin="0, 0, 10, 0"
                Command="{Binding SaveCommand}">
                Сохранить
            </Button>
            <Button
                Command="{Binding CancelEditCommand}">
                Отмена
            </Button>
        </StackPanel>
    </Grid>
</abstract:NavigationPage>