<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Clients.EditClient.EditClientPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarRentService.Pages.Clients.EditClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:entities="using:CarRentService.DAL.Entities"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    xmlns:editors="using:Syncfusion.UI.Xaml.Editors"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:EditClientViewModel }">

    <Pivot
        Margin="47, 20, 47, 20">
        <PivotItem
            Header="Основная информация">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <CommandBar
                    DefaultLabelPosition="Right"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4">
                    <AppBarButton
                        Icon="Delete"
                        Command="{Binding DeleteClientCommand}"
                        Label="Удалить клиента" />
                </CommandBar>
                <StackPanel
                    Margin="0, 10, 5, 10"
                    Grid.Row="1"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        ID клиента
                    </TextBlock>
                    <TextBox
                        Text="{Binding Client.Id, Mode=TwoWay}"
                        IsReadOnly="True" />
                </StackPanel>
                <StackPanel
                    Margin="0, 10, 5, 5"
                    Grid.Row="2"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Фамилия Имя Отчество
                    </TextBlock>
                    <TextBox
                        Text="{Binding Client.Fio, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="1">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Возраст
                    </TextBlock>
                    <TextBox
                        Text="{Binding Client.Age, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="2">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Телефон
                    </TextBlock>
                    <TextBox
                        Text="{Binding Client.Phone, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 0, 10"
                    Grid.Row="2"
                    Grid.Column="3">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Номер водительского удостоверения
                    </TextBlock>
                    <TextBox
                        Text="{Binding Client.DriverLicenseNumber, Mode=TwoWay}" />
                </StackPanel>
                <editors:SfComboBox
                    ItemsSource="{Binding Branches, Mode=OneWay}"
                    Header="Филиал договора (основной)"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="0, 10, 0, 0"
                    TextMemberPath="Name"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding Client.Branch, Mode=TwoWay}"
                    Width="200" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0, 15, 0, 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="0, 0, 10, 0"
                        Command="{Binding SaveCommand}">
                        Сохранить
                    </Button>
                    <Button
                        Command="{Binding CancelEditCommand}">
                        Отмена
                    </Button>
                </StackPanel>
            </Grid>
        </PivotItem>
        <PivotItem
            Header="Аренды">
            <StackPanel>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Icon="Add"
                        Command="{Binding AddClientCommand}"
                        Label="Добавить" />
                    <AppBarButton
                        Icon="Clear"
                        Command="{Binding ClearFiltersAndSortCommand}"
                        Label="Сбросить группировку, фильтры и сортировку" />
                </CommandBar>

                <dataGrid:SfDataGrid
                    x:Name="DataGrid"
                    AutoGenerateColumns="False"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    LiveDataUpdateMode="AllowDataShaping"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Client.Rentals}">
                    <dataGrid:SfDataGrid.DetailsViewDefinition>
                        <dataGrid:GridViewDefinition
                            RelationalColumn="Cars">
                            <dataGrid:GridViewDefinition.DataGrid>
                                <dataGrid:SfDataGrid
                                    x:Name="FirstDetailsViewGrid"
                                    AllowEditing="False"
                                    AllowFiltering="True"
                                    ShowGroupDropArea="True"
                                    LiveDataUpdateMode="AllowDataShaping"
                                    AllowDraggingColumns="True"
                                    GridLinesVisibility="Both"
                                    HeaderLinesVisibility="Both"
                                    IsGroupDropAreaExpanded="True"
                                    ColumnWidthMode="Star"
                                    AutoGenerateColumns="True">
                                    <dataGrid:SfDataGrid.Columns>
                                        <dataGrid:GridTextColumn
                                            HeaderText="ID автомобиля"
                                            MappingName="Id" />
                                        <dataGrid:GridTextColumn
                                            HeaderText="Статус"
                                            MappingName="Status" />
                                        <dataGrid:GridTextColumn
                                            HeaderText="Марка"
                                            MappingName="Make" />
                                        <dataGrid:GridTextColumn
                                            HeaderText="Модель"
                                            MappingName="Model" />
                                        <dataGrid:GridNumericColumn
                                            MappingName="Year"
                                            HeaderText="Год" />
                                    </dataGrid:SfDataGrid.Columns>
                                </dataGrid:SfDataGrid>
                            </dataGrid:GridViewDefinition.DataGrid>
                        </dataGrid:GridViewDefinition>
                    </dataGrid:SfDataGrid.DetailsViewDefinition>
                    <dataGrid:SfDataGrid.Columns>
                        <dataGrid:GridTextColumn
                            HeaderText="ID аренды"
                            MappingName="Id" />
                        <dataGrid:GridTextColumn
                            HeaderText="Статус"
                            MappingName="Status" />
                        <dataGrid:GridNumericColumn
                            HeaderText="Цена"
                            MappingName="Cost" />
                    </dataGrid:SfDataGrid.Columns>
                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditClientCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteClientCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>
                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
        <PivotItem
            Header="Автомобили">
            <StackPanel>
                <dataGrid:SfDataGrid
                    x:Name="CarsDataGrid"
                    AutoGenerateColumns="True"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    LiveDataUpdateMode="AllowDataShaping"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Client.Cars}">
                    <!-- <dataGrid:SfDataGrid.Columns> -->
                    <!--     <dataGrid:GridTextColumn -->
                    <!--         HeaderText="ID" -->
                    <!--         MappingName="Id" /> -->
                    <!--     <dataGrid:GridTextColumn -->
                    <!--         HeaderText="Статус" -->
                    <!--         MappingName="Status" /> -->
                    <!--     <dataGrid:GridNumericColumn -->
                    <!--         HeaderText="Цена" -->
                    <!--         MappingName="Cost" /> -->
                    <!-- </dataGrid:SfDataGrid.Columns> -->
                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditClientCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteClientCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>
                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
        <PivotItem
            Header="Страховки" />
        <PivotItem
            Header="Платежи" />
    </Pivot>
</abstract:NavigationPage>