<?xml version="1.0" encoding="utf-8"?>

<abstract:NavigationPage
    x:Class="CarRentService.Pages.Branches.ViewBranch.ViewBranchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarRentService.Pages.Branches.ViewBranch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:abstract="using:CarRentService.Common.Abstract"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance local:ViewBranchViewModel }">

    <Pivot
        Margin="47, 20, 47, 20">
        <PivotItem
            Header="Основная информация">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <CommandBar
                    DefaultLabelPosition="Right"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
                    <AppBarButton
                        Icon="Delete"
                        Command="{Binding DeleteBranchCommand}"
                        Label="Удалить филиал" />
                </CommandBar>
                <StackPanel
                    Margin="0, 10, 5, 10"
                    Grid.Row="1"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        ID клиента
                    </TextBlock>
                    <TextBox
                        Text="{Binding Branch.Id, Mode=TwoWay}"
                        IsEnabled="False" />
                </StackPanel>
                <StackPanel
                    Margin="0, 10, 5, 5"
                    Grid.Row="2"
                    Grid.Column="0">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Название
                    </TextBlock>
                    <TextBox
                        Text="{Binding Branch.Name, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="1">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Адрес
                    </TextBlock>
                    <TextBox
                        Text="{Binding Branch.Address, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel
                    Margin="5, 10, 5, 10"
                    Grid.Row="2"
                    Grid.Column="2">
                    <TextBlock
                        Margin="0, 0, 0, 10">
                        Контактные данные
                    </TextBlock>
                    <TextBox
                        Text="{Binding Branch.ContactDetails, Mode=TwoWay}" />
                </StackPanel>

                <StackPanel
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="0, 15, 0, 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Margin="0, 0, 10, 0"
                        Command="{Binding SaveCommand}">
                        Сохранить
                    </Button>
                    <Button
                        Command="{Binding CancelEditCommand}">
                        Отмена
                    </Button>
                </StackPanel>
            </Grid>
        </PivotItem>
        <PivotItem
            Header="Автомобили">
            <StackPanel>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Icon="Add"
                        Command="{Binding AddCarCommand}"
                        Label="Добавить" />
                    <AppBarButton
                        Icon="Clear"
                        Command="{Binding ClearFiltersAndSortCommand}"
                        CommandParameter="Cars"
                        Label="Сбросить группировку, фильтры и сортировку" />
                </CommandBar>

                <dataGrid:SfDataGrid
                    x:Name="CarsDataGrid"
                    AutoGenerateColumns="False"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    LiveDataUpdateMode="AllowDataShaping"
                    MinHeight="400"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Branch.Cars}">

                    <dataGrid:SfDataGrid.Columns>
                        <dataGrid:GridNumericColumn
                            HeaderText="ID автомобиля"
                            MappingName="Id" />
                        <dataGrid:GridTextColumn
                            HeaderText="ID аренды"
                            MappingName="RentalId" />
                        <dataGrid:GridTextColumn
                            HeaderText="Марка"
                            MappingName="Make" />
                        <dataGrid:GridTextColumn
                            HeaderText="Модель"
                            MappingName="Model" />
                        <dataGrid:GridNumericColumn
                            MappingName="Year"
                            HeaderText="Год" />
                    </dataGrid:SfDataGrid.Columns>

                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditCarCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteCarCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>

                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
        <PivotItem
            Header="Клиенты">
            <StackPanel>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Icon="Add"
                        Command="{Binding AddClientCommand}"
                        Label="Добавить" />
                    <AppBarButton
                        Icon="Clear"
                        Command="{Binding ClearFiltersAndSortCommand}"
                        CommandParameter="Clients"
                        Label="Сбросить группировку, фильтры и сортировку" />
                </CommandBar>

                <dataGrid:SfDataGrid
                    x:Name="ClientsDataGrid"
                    AutoGenerateColumns="True"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    MinHeight="400"
                    LiveDataUpdateMode="AllowDataShaping"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Branch.Clients}">

                    <dataGrid:SfDataGrid.Columns>
                        <dataGrid:GridNumericColumn
                            HeaderText="ID клиента"
                            MappingName="Id" />
                        <dataGrid:GridTextColumn
                            HeaderText="Фамилия имя отчество"
                            MappingName="Fio" />
                        <dataGrid:GridNumericColumn
                            HeaderText="Возраст"
                            MappingName="Age" />
                        <dataGrid:GridTextColumn
                            HeaderText="Телефон"
                            MappingName="Phone" />
                        <dataGrid:GridTextColumn
                            HeaderText="Номер водительского удостоверения"
                            MappingName="DriverLicenseNumber" />
                    </dataGrid:SfDataGrid.Columns>

                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditClientCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteClientCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>
                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
        <PivotItem
            Header="Менеджеры">
            <StackPanel>
                <CommandBar
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Icon="Add"
                        Command="{Binding AddManagerCommand}"
                        Label="Добавить" />
                    <AppBarButton
                        Icon="Clear"
                        Command="{Binding ClearFiltersAndSortCommand}"
                        CommandParameter="Managers"
                        Label="Сбросить группировку, фильтры и сортировку" />
                </CommandBar>

                <dataGrid:SfDataGrid
                    x:Name="ManagersDataGrid"
                    AutoGenerateColumns="False"
                    AllowEditing="False"
                    AllowFiltering="True"
                    ShowGroupDropArea="True"
                    LiveDataUpdateMode="AllowDataShaping"
                    AllowDraggingColumns="True"
                    GridLinesVisibility="Both"
                    HeaderLinesVisibility="Both"
                    MinHeight="400"
                    IsGroupDropAreaExpanded="True"
                    ColumnWidthMode="Star"
                    ItemsSource="{Binding Branch.Managers}">
                    <dataGrid:SfDataGrid.Columns>
                        <dataGrid:GridNumericColumn
                            HeaderText="ID менеджера"
                            MappingName="Id" />
                        <dataGrid:GridTextColumn
                            HeaderText="Фамилия имя отчество"
                            MappingName="Fio" />
                        <dataGrid:GridNumericColumn
                            HeaderText="Возраст"
                            MappingName="Age" />
                        <dataGrid:GridTextColumn
                            HeaderText="Телефон"
                            MappingName="Phone" />
                    </dataGrid:SfDataGrid.Columns>
                    <dataGrid:SfDataGrid.RecordContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Text="Изменить"
                                Command="{Binding Path=DataGrid.DataContext.EditManagerCommand}"
                                CommandParameter="{Binding}" />
                            <MenuFlyoutItem
                                Text="Удалить"
                                Command="{Binding Path=DataGrid.DataContext.DeleteManagerCommand}"
                                CommandParameter="{Binding}" />
                        </MenuFlyout>
                    </dataGrid:SfDataGrid.RecordContextFlyout>
                </dataGrid:SfDataGrid>
            </StackPanel>
        </PivotItem>
    </Pivot>
</abstract:NavigationPage>