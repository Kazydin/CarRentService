<?xml version="1.0" encoding="utf-8"?>

<domain:InjectedHomePage
    x:Class="CarRentService.Home.Pages.Clients.ClientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:CarRentService.Home.Pages.Domain"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:clients="using:CarRentService.Home.Pages.Clients"
    xmlns:system="using:System"
    xmlns:entities="using:CarRentService.DAL.Entities"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=clients:ClientsViewModel}">
    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto">
        <StackPanel
        Margin="47, 20, 47, 20" Orientation="Vertical">
        <CommandBar
            Background="Transparent"
            IsOpen="False"
            DefaultLabelPosition="Right">
            <AppBarButton
                Icon="Add"
                Label="Add" />
            <AppBarButton
                Icon="Edit"
                Label="Edit" />
            <AppBarButton
                Icon="Share"
                Label="Share" />
        </CommandBar>

        <controls:DataGrid
            x:Name="DataGrid"
            Margin="10"
            CanUserSortColumns="True"
            GridLinesVisibility="All"
            IsReadOnly="True"
            SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
            ItemsSource="{Binding Path=Clients}"
            AutoGenerateColumns="False">
            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn.HeaderStyle>
                        <Style
                            TargetType="primitives:DataGridColumnHeader">
                            <Setter
                                Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Padding="5">
                                            <TextBlock
                                                Text="ID"
                                                VerticalAlignment="Center" />
                                            <Button
                                                Margin="15, 0, 0, 0">
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <Flyout.Content>
                                                            <StackPanel
                                                                MinWidth="200"
                                                                Orientation="Vertical">

                                                                <MenuFlyoutItem
                                                                    Text="Сортировка по возрастанию" />
                                                                <MenuFlyoutItem
                                                                    Text="Сортировка по убыванию" />
                                                                <MenuFlyoutItem
                                                                    Text="Очистить сортировку" />

                                                                <MenuFlyoutSeparator />

                                                                <MenuFlyoutItem
                                                                    Text="Очистить фильтрацию" />

                                                                <TextBox
                                                                    PlaceholderText="Введите текст для поиска"
                                                                    Margin="0,0,0,10"
                                                                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                <ScrollViewer
                                                                    VerticalScrollBarVisibility="Auto"
                                                                    Height="200">
                                                                    <ItemsControl
                                                                        ItemsSource="{Binding FilteredOptions}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <CheckBox
                                                                                    Content="{Binding Name}"
                                                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </ScrollViewer>
                                                            </StackPanel>
                                                        </Flyout.Content>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Viewbox
                                                    MaxHeight="15"
                                                    MaxWidth="15">
                                                    <SymbolIcon
                                                        Symbol="Filter" />
                                                </Viewbox>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </controls:DataGridTemplateColumn.HeaderStyle>
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                VerticalAlignment="Center"
                                d:DataContext="{d:DesignInstance Type=entities:Client}"
                                Text="{Binding Id}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn.HeaderStyle>
                        <Style
                            TargetType="primitives:DataGridColumnHeader">
                            <Setter
                                Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Padding="5">
                                            <TextBlock
                                                Text="ФИО"
                                                VerticalAlignment="Center" />
                                            <Button
                                                Margin="15, 0, 0, 0">
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <Flyout.Content>
                                                            <StackPanel
                                                                MinWidth="200"
                                                                Orientation="Vertical">

                                                                <MenuFlyoutItem
                                                                    Text="Сортировка по возрастанию" />
                                                                <MenuFlyoutItem
                                                                    Text="Сортировка по убыванию" />
                                                                <MenuFlyoutItem
                                                                    Text="Очистить сортировку" />

                                                                <MenuFlyoutSeparator />

                                                                <MenuFlyoutItem
                                                                    Text="Очистить фильтрацию" />

                                                                <TextBox
                                                                    PlaceholderText="Введите текст для поиска"
                                                                    Margin="0,0,0,10"
                                                                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                <ScrollViewer
                                                                    VerticalScrollBarVisibility="Auto"
                                                                    Height="200">
                                                                    <ItemsControl
                                                                        ItemsSource="{Binding FilteredOptions}">
                                                                        <ItemsControl.ItemTemplate>
                                                                            <DataTemplate>
                                                                                <CheckBox
                                                                                    Content="{Binding Name}"
                                                                                    IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                                                            </DataTemplate>
                                                                        </ItemsControl.ItemTemplate>
                                                                    </ItemsControl>
                                                                </ScrollViewer>
                                                            </StackPanel>
                                                        </Flyout.Content>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Viewbox
                                                    MaxHeight="15"
                                                    MaxWidth="15">
                                                    <SymbolIcon
                                                        Symbol="Filter" />
                                                </Viewbox>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </controls:DataGridTemplateColumn.HeaderStyle>
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                VerticalAlignment="Center"
                                d:DataContext="{d:DesignInstance Type=entities:Client}"
                                Text="{Binding Fio}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTemplateColumn
                    Header="Возраст">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                VerticalAlignment="Center"
                                d:DataContext="{d:DesignInstance Type=entities:Client}"
                                Text="{Binding Age}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTemplateColumn
                    Header="Телефон">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                VerticalAlignment="Center"
                                d:DataContext="{d:DesignInstance Type=entities:Client}"
                                Text="{Binding Phone}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
                <controls:DataGridTemplateColumn
                    Header="Номер водительского удостоверения">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock
                                Padding="10"
                                VerticalAlignment="Center"
                                d:DataContext="{d:DesignInstance Type=entities:Client}"
                                Text="{Binding DriverLicenseNumber}" />
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <!-- Кнопка "Удалить" -->
                <controls:DataGridTemplateColumn
                    Header="Удалить">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Padding="10">
                                <Button
                                    Content="Изменить"
                                    Tag="{Binding}"
                                    Click="ButtonEdit_OnClick"
                                    Margin="0, 0, 10, 0" />
                                <Button
                                    Content="Удалить"
                                    Tag="{Binding}"
                                    Click="ButtonRemove_OnClick" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </StackPanel>
    </ScrollViewer>
</domain:InjectedHomePage>