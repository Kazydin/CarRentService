<?xml version="1.0" encoding="utf-8"?>
<domain:InjectedHomePage
    x:Class="CarRentService.Home.Pages.Clients.ClientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:CarRentService.Home.Pages.Domain"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:clients="using:CarRentService.Home.Pages.Clients"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=clients:ClientsViewModel}">

    <Grid Margin="47, 20, 47, 0">
        <Grid>
            <controls:DataGrid
                x:Name="DataGrid"
                Margin="10"
                CanUserSortColumns="True"
                GridLinesVisibility="All"
                ItemsSource="{Binding Path=Clients}"
                AutoGenerateColumns="True" />
        </Grid>
    </Grid>
</domain:InjectedHomePage>
