<?xml version="1.0" encoding="utf-8"?>

<domain:InjectedHomePage
    x:Class="CarRentService.Home.Pages.Clients.ClientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:CarRentService.Home.Pages.Domain"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:clients="using:CarRentService.Home.Pages.Clients"
    xmlns:system="using:System"
    xmlns:entities="using:CarRentService.DAL.Entities"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=clients:ClientsViewModel}">
    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Auto">
        <StackPanel
            Margin="47, 20, 47, 20" Orientation="Vertical">
            <CommandBar
                Background="Transparent"
                IsOpen="False"
                DefaultLabelPosition="Right">
                <AppBarButton
                    Icon="Add"
                    Command="{Binding AddClientCommand}"
                    Label="Добавить" />
                <AppBarButton
                    Icon="Clear"
                    Command="{Binding ClearFiltersAndSortCommand}"
                    Label="Сбросить фильтры и сортировку" />
            </CommandBar>

            <controls:DataGrid
                x:Name="DataGrid"
                Margin="10"
                CanUserSortColumns="True"
                GridLinesVisibility="All"
                IsReadOnly="True"
                SelectedItem="{Binding SelectedClient, Mode=TwoWay}"
                ItemsSource="{Binding Path=FilteredClients}"
                AutoGenerateColumns="False">
                <controls:DataGrid.Columns>
                    <controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="primitives:DataGridColumnHeader">
                                <Setter
                                    Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="5">
                                                <TextBlock
                                                    Text="ID"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Margin="15, 0, 0, 0"
                                                    Background="{Binding IdColumnFilteredOrSorted, Converter={StaticResource BooleanToBackgroundConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <Flyout.Content>
                                                                <StackPanel
                                                                    MinWidth="200"
                                                                    Orientation="Vertical">

                                                                    <MenuFlyoutItem
                                                                        Command="{Binding SortColumnCommand}"
                                                                        CommandParameter="ID.ASC"
                                                                        Background="{Binding SortOrder, Converter={StaticResource MatchValuesBackgroundConverter}, ConverterParameter='ID.ASC'}"
                                                                        Text="Сортировка по возрастанию" />
                                                                    <MenuFlyoutItem
                                                                        Command="{Binding SortColumnCommand}"
                                                                        CommandParameter="ID.DESC"
                                                                        Background="{Binding SortOrder, Converter={StaticResource MatchValuesBackgroundConverter}, ConverterParameter='ID.DESC'}"
                                                                        Text="Сортировка по убыванию" />
                                                                    <MenuFlyoutItem
                                                                        Command="{Binding ClearSortColumnCommand}"
                                                                        CommandParameter="ID.CLR"
                                                                        Text="Очистить сортировку" />

                                                                    <MenuFlyoutSeparator />

                                                                    <TextBox
                                                                        PlaceholderText="Введите текст для поиска"
                                                                        Margin="0,10,0,10"
                                                                        Text="{Binding SearchId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </Flyout.Content>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <Viewbox
                                                        MaxHeight="15"
                                                        MaxWidth="15">
                                                        <SymbolIcon
                                                            Symbol="Filter" />
                                                    </Viewbox>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:DataGridTemplateColumn.HeaderStyle>
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10"
                                    VerticalAlignment="Center"
                                    d:DataContext="{d:DesignInstance Type=entities:Client}"
                                    Text="{Binding Path=Id}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="primitives:DataGridColumnHeader">
                                <Setter
                                    Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="5">
                                                <TextBlock
                                                    Text="ФИО"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Margin="15, 0, 0, 0"
                                                    Background="{Binding FioColumnFilteredOrSorted, Converter={StaticResource BooleanToBackgroundConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <Flyout.Content>
                                                                <StackPanel
                                                                    MinWidth="200"
                                                                    Orientation="Vertical">

                                                                    <MenuFlyoutItem
                                                                        Command="{Binding SortColumnCommand}"
                                                                        CommandParameter="Fio.ASC"
                                                                        Background="{Binding SortOrder, Converter={StaticResource MatchValuesBackgroundConverter}, ConverterParameter='Fio.ASC'}"
                                                                        Text="Сортировка по возрастанию" />
                                                                    <MenuFlyoutItem
                                                                        Command="{Binding SortColumnCommand}"
                                                                        CommandParameter="Fio.DESC"
                                                                        Background="{Binding SortOrder, Converter={StaticResource MatchValuesBackgroundConverter}, ConverterParameter='Fio.DESC'}"
                                                                        Text="Сортировка по убыванию" />
                                                                    <MenuFlyoutItem
                                                                        Command="{Binding ClearSortColumnCommand}"
                                                                        CommandParameter="Fio.CLR"
                                                                        Text="Очистить сортировку" />

                                                                    <MenuFlyoutSeparator />

                                                                    <TextBox
                                                                        PlaceholderText="Введите текст для поиска"
                                                                        Margin="0,10,0,10"
                                                                        Text="{Binding SearchFio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </Flyout.Content>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <Viewbox
                                                        MaxHeight="15"
                                                        MaxWidth="15">
                                                        <SymbolIcon
                                                            Symbol="Filter" />
                                                    </Viewbox>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:DataGridTemplateColumn.HeaderStyle>
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10"
                                    VerticalAlignment="Center"
                                    d:DataContext="{d:DesignInstance Type=entities:Client}"
                                    Text="{Binding Path=Fio}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="primitives:DataGridColumnHeader">
                                <Setter
                                    Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="5">
                                                <TextBlock
                                                    Text="Возраст"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Margin="15, 0, 0, 0"
                                                    Background="{Binding SearchAge, Converter={StaticResource BooleanToBackgroundConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <Flyout.Content>
                                                                <StackPanel
                                                                    MinWidth="200"
                                                                    Orientation="Vertical">

                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по возрастанию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по убыванию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Очистить сортировку" />

                                                                    <MenuFlyoutSeparator />

                                                                    <TextBox
                                                                        PlaceholderText="Введите текст для поиска"
                                                                        Margin="0,10,0,10"
                                                                        Text="{Binding SearchAge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </Flyout.Content>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <Viewbox
                                                        MaxHeight="15"
                                                        MaxWidth="15">
                                                        <SymbolIcon
                                                            Symbol="Filter" />
                                                    </Viewbox>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:DataGridTemplateColumn.HeaderStyle>
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10"
                                    VerticalAlignment="Center"
                                    d:DataContext="{d:DesignInstance Type=entities:Client}"
                                    Text="{Binding Path=Age}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="primitives:DataGridColumnHeader">
                                <Setter
                                    Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="5">
                                                <TextBlock
                                                    Text="Телефон"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Margin="15, 0, 0, 0"
                                                    Background="{Binding SearchPhone, Converter={StaticResource BooleanToBackgroundConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <Flyout.Content>
                                                                <StackPanel
                                                                    MinWidth="200"
                                                                    Orientation="Vertical">

                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по возрастанию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по убыванию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Очистить сортировку" />

                                                                    <MenuFlyoutSeparator />

                                                                    <TextBox
                                                                        PlaceholderText="Введите текст для поиска"
                                                                        Margin="0,10,0,10"
                                                                        Text="{Binding SearchPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </Flyout.Content>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <Viewbox
                                                        MaxHeight="15"
                                                        MaxWidth="15">
                                                        <SymbolIcon
                                                            Symbol="Filter" />
                                                    </Viewbox>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:DataGridTemplateColumn.HeaderStyle>
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10"
                                    VerticalAlignment="Center"
                                    d:DataContext="{d:DesignInstance Type=entities:Client}"
                                    Text="{Binding Path=Phone}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                    <controls:DataGridTemplateColumn>
                        <controls:DataGridTemplateColumn.HeaderStyle>
                            <Style
                                TargetType="primitives:DataGridColumnHeader">
                                <Setter
                                    Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <StackPanel
                                                Orientation="Horizontal"
                                                Padding="5">
                                                <TextBlock
                                                    Text="Номер водительского удостоверения"
                                                    VerticalAlignment="Center" />
                                                <Button
                                                    Margin="15, 0, 0, 0"
                                                    Background="{Binding SearchDriverLicenseNumber, Converter={StaticResource BooleanToBackgroundConverter}}">
                                                    <Button.Flyout>
                                                        <Flyout>
                                                            <Flyout.Content>
                                                                <StackPanel
                                                                    MinWidth="200"
                                                                    Orientation="Vertical">

                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по возрастанию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Сортировка по убыванию" />
                                                                    <MenuFlyoutItem
                                                                        Text="Очистить сортировку" />

                                                                    <MenuFlyoutSeparator />

                                                                    <TextBox
                                                                        PlaceholderText="Введите текст для поиска"
                                                                        Margin="0,10,0,10"
                                                                        Text="{Binding SearchDriverLicenseNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                                </StackPanel>
                                                            </Flyout.Content>
                                                        </Flyout>
                                                    </Button.Flyout>
                                                    <Viewbox
                                                        MaxHeight="15"
                                                        MaxWidth="15">
                                                        <SymbolIcon
                                                            Symbol="Filter" />
                                                    </Viewbox>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </controls:DataGridTemplateColumn.HeaderStyle>
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Padding="10"
                                    VerticalAlignment="Center"
                                    d:DataContext="{d:DesignInstance Type=entities:Client}"
                                    Text="{Binding Path=DriverLicenseNumber}" />
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <!-- Кнопка "Удалить" -->
                    <controls:DataGridTemplateColumn
                        Header="Удалить">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Padding="10">
                                    <Button
                                        Content="Изменить"
                                        Tag="{Binding}"
                                        Click="ButtonEdit_OnClick"
                                        Margin="0, 0, 10, 0" />
                                    <Button
                                        Content="Удалить"
                                        Tag="{Binding}"
                                        Click="ButtonRemove_OnClick" />
                                </StackPanel>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </StackPanel>
    </ScrollViewer>
</domain:InjectedHomePage>